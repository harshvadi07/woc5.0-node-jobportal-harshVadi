<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Job Hunt</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Righteous&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
  <link rel="stylesheet" href="node_modules/mdbootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" href="node_modules/mdbootstrap/css/mdb.min.css">
  <link rel="stylesheet" href="node_modules/mdbootstrap/css/style.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="css/home.css">
</head>

<body>
  <nav class="navbar">
    <div class="container-fluid">
      <div class="navbar-header">
        <a href="#">
          <h3>Job-Hunt</h3>
        </a>
      </div>
      <ul class="nav justify-content-end">
        <li class="nav-item">
          <a class="nav-link active" href="#"><%= student.firstName %></a>
        </li>
        </li>
      </ul>
    </div>
  </nav>

  <p class="mb-5"></p>
  <p class="h4 text-center heading">ELIGIBLE JOBS</p>

  <div class="container-fluid text-center">
    <% companies.forEach(company => { %>
    <div class="text-center company">
      <div class="row">
        <div class="col">Company</div>
        <div class="col"><%= company.companyName %></div>
      </div>
      <hr>
      <div class="row">
        <div class="col">Website</div>
        <div class="col"><%= company.website %></div>
      </div>
      <hr>
      <div class="row">
        <div class="col">Required Degree</div>
        <div class="col"><%= company.reqDegree %></div>
      </div>
      <hr>
      <div class="row">
        <div class="col">Required CPI</div>
        <div class="col"><%= company.reqCpi %></div>
      </div>
      <hr>
      <div class="row">
        <div class="col">Position</div>
        <div class="col"><%= company.position %></div>
      </div>
      <hr>
      <div class="row">
        <div class="col">Salary</div>
        <div class="col"><%= company.package %></div>
      </div>
      <hr>
      <div class="row">
        <div class="col">Job Description</div>
        <div class="col"><%= company.description %></div>
      </div>
    </div>
    <% }) %>
  </div>

  <%- include("partials/footer.ejs") %>